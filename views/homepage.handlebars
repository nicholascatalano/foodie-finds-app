<div class='homepage-container'>
  <h2 class='reviews-title'>Reviews</h2>
  <ul class='nav-list'>
    <li class='nav-item new-post-button'><a href='/new' class='nav-link' id='createNewReviewBtn'>Create
        New Review</a></li>
  </ul>
  <div class='reviews-section'>
    <aside id='filters'>
      <form id='filterSubmit'>
        

        <h4>City:</h4>
        <input type='text' id='city-input' required />

        <h4>Type:</h4>
        <input type='checkbox' id='sit-down' name='typeOptions' value='sit' />
        <label for='sit-down'> Sit-down</label><br />
        <input
          type='checkbox'
          id='quick-bites'
          name='typeOptions'
          value='quick'
        />
        <label for='quick-bites'> Quick bites</label><br />
        <input type='checkbox' id='cafe' name='typeOptions' value='cafe' />
        <label for='cafe'> Cafe</label>

        <h4>Cuisine:</h4>
        {{#each cuisineOptions as |cuisine|}}
          <input
            type='checkbox'
            id='{{cuisine}}'
            name='cuisineOptions'
            value='{{cuisine}}'
          />
          <label for='{{cuisine}}'> {{cuisine}}</label><br />
        {{/each}}

        <h4>Price Range:</h4>
        <input type='checkbox' id='cheap' name='priceOptions' value='$' />
        <label for='cheap'> $</label><br />
        <input type='checkbox' id='affordable' name='priceOptions' value='$$' />
        <label for='affordable'> $$</label><br />
        <input type='checkbox' id='fancy' name='priceOptions' value='$$$' />
        <label for='fancy'> $$$</label><br />
        <input type='checkbox' id='premium' name='priceOptions' value='$$$$' />
        <label for='premium'> $$$$</label>

        <h4>Rating:</h4>
        <input type='checkbox' id='five-star' name='ratingOptions' value='5' />
        <label for='five-star'> 5-star</label><br />
        <input type='checkbox' id='four-star' name='ratingOptions' value='4' />
        <label for='four-star'> 4-star</label><br />
        <input type='checkbox' id='three-star' name='ratingOptions' value='3' />
        <label for='three-star'> 3-star</label><br />
        <input type='checkbox' id='two-star' name='ratingOptions' value='2' />
        <label for='two-star'> 2-star</label><br />
        <input type='checkbox' id='one-star' name='ratingOptions' value='1' />
        <label for='one-star'> 1-star</label>

        <button class='apply-filters' type='submit'>Apply Filters</button>
      </form>
    </aside>
    <ul class='reviews-list'>
      {{#each reviews}}
        <li class='review-card'>
          <h3 class='review-restaurant'><a
              href='/review/{{this.restaurant_id}}'
            >{{this.restaurant}}</a>
            in
            {{this.city}}</h3>
          <p class='review-rating'>Rating: {{this.rating}}/5</p>
          <p class='review-content'>{{this.content}}</p>
          <p class='review-author'>Review by: {{user.username}}</p>
        </li>
      {{/each}}
    </ul>
  </div>

</div>

<script src='/js/filter.js'></script>